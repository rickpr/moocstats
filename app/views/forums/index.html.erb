<h1>Listing forums</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Web app arch ii</th>
      <th>General discussion</th>
      <th>Study groups</th>
      <th>Lectures</th>
      <th>Assignments</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.total %></td>
        <td><%= forum.web_app_arch_ii %></td>
        <td><%= forum.general_discussion %></td>
        <td><%= forum.study_groups %></td>
        <td><%= forum.lectures %></td>
        <td><%= forum.assignments %></td>
        <td><%= forum.student %></td>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


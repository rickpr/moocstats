<h1>Listing controlgroups</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controlgroups.each do |controlgroup| %>
      <tr>
        <td><%= controlgroup.student %></td>
        <td><%= link_to 'Show', controlgroup %></td>
        <td><%= link_to 'Edit', edit_controlgroup_path(controlgroup) %></td>
        <td><%= link_to 'Destroy', controlgroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Controlgroup', new_controlgroup_path %>
